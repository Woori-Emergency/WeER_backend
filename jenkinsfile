pipeline {
    agent any
    // jenkins 에 tools 로 설치한 jdk 사용
    tools {
        jdk ("jdk21")
    }

    environment {
        DOCKER_IMAGE_NAME = 'weerfisa/weerBE'  // Docker Hub 이미지 이름
        DOCKER_CREDENTIALS_ID = credentials('Docker-credential')       // Jenkins에 저장된 Docker Hub 자격증명 ID
        SPRING_APPLICATION_SECRET = credentials('Spring-application-secret')
    }

    stages {
        stage('Clone Repository') {
            steps {
                    git branch: 'test/jenkins',                                    // 빌드할 브랜치
                    url: 'https://github.com/Woori-Emergency/WeER_backend.git'
            }
        }

        stage('Prepare Environment'){
            steps{
                    script{
                            // application-secret 생성
                           writeFile file: 'application-secret.yml', text: SPRING_APPLICATION_SECRET
                           // 생성된 파일 확인
                           sh 'ls -la application-secret.yml'
                    }
            }
        }

        stage('Build JAR') {
            steps {
                script {
                    sh 'chmod +x gradlew'
                    // Gradle 빌드 실행
                    sh './gradlew clean build'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    def jarFile = sh(script: "find build/libs -name '*.jar' | head -n 1", returnStdout: true).trim()
                    if (!fileExists(jarFile)) {
                        error("JAR file not found! Ensure the build step produces a JAR.")
                    }

                    // Docker 이미지 빌드
                    sh """
                    docker build -t ${DOCKER_IMAGE_NAME}:latest \
                                            --build-arg JAR_FILE=${jarFile} \
                                            --build-arg SECRET_FILE=application-secret.yml .
                    """
                }
            }
        }


        stage('Push Docker Image') {
            steps {
                script {
                    // Docker Hub 로그인 및 Push
                    withDockerRegistry(credentialsId: "${DOCKER_CREDENTIALS_ID}") {
                        sh "docker push ${DOCKER_IMAGE_NAME}:latest"
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Build and push succeeded!'
        }
        failure {
            echo 'Build or push failed.'
        }
    }
}
